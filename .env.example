# ============================================================
# Agentic SOC v5 — Environment Configuration
# Copy to .env and fill in real values
# ============================================================

# ─── PostgreSQL ────────────────────────────────────────────
PG_DB=agentic_soc
PG_USER=soc_admin
PG_PASS=CHANGE_ME_postgres_password
DATABASE_URL=postgresql+asyncpg://${PG_USER}:${PG_PASS}@postgres:5432/${PG_DB}

# ─── Neo4j ─────────────────────────────────────────────────
NEO4J_PASS=CHANGE_ME_neo4j_password
NEO4J_URI=bolt://neo4j:7687

# ─── Redis ─────────────────────────────────────────────────
REDIS_PASS=CHANGE_ME_redis_password
REDIS_URL=redis://:${REDIS_PASS}@redis:6379/0

# ─── MinIO (S3-compatible evidence storage) ────────────────
MINIO_USER=soc_minio
MINIO_PASS=CHANGE_ME_minio_password
MINIO_ENDPOINT=minio:9000

# ─── JWT Auth ──────────────────────────────────────────────
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_64
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Anthropic (SOC Agent LLM) ────────────────────────────
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME

# ─── n8n ───────────────────────────────────────────────────
N8N_USER=admin
N8N_PASS=CHANGE_ME_n8n_password

# ─── External Integrations (Phase 1-2) ────────────────────
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
VT_API_KEY=CHANGE_ME_virustotal_api_key
ABUSEIPDB_API_KEY=CHANGE_ME_abuseipdb_api_key

# ─── External Integrations (Phase 2) ──────────────────────
CLERK_SECRET_KEY=sk_live_CHANGE_ME
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_REGION=ap-southeast-4

# ─── External Integrations (Phase 3) ──────────────────────
WAZUH_API_URL=https://wazuh-manager:55000
WAZUH_API_USER=wazuh-wui
WAZUH_API_PASS=CHANGE_ME
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_PUBLIC_KEY=CHANGE_ME
LANGFUSE_SECRET_KEY=CHANGE_ME

# ─── App Config ────────────────────────────────────────────
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
